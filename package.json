{
  "name": "AICRAssistant",
  "displayName": "AICRAssistant",
  "description": "AICRAssistant demo 0.0.1",
  "version": "0.0.1",
  "publisher": "Jade",
  "repository": {
    "type": "git",
    "url": "https://github.com/jade/ai-cr-extension.git"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-cr-assistant",
          "title": "AI CR Assistant",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "ai-cr-assistant": [
        {
          "type": "webview",
          "id": "aiCRPanel",
          "name": "CR问题列表"
        }
      ]
    },
    "commands": [
      {
        "command": "aiCRAssistant.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "aiCRAssistant.showProjectInfo",
        "title": "显示项目信息"
      },
      {
        "command": "aiCRAssistant.refreshCRProblems",
        "title": "刷新CR问题",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aiCRAssistant.refreshCRProblems",
          "when": "view == aiCRPanel",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "build": "cd webview && npm run build",
    "dev": "cd webview && npm run dev",
    "package": "npm run build && vsce package --no-git-tag-version"
  },
  "dependencies": {
    "simple-git": "^3.25.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.34.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}